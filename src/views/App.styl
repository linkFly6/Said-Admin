.app
  .app-breadcrumb
    margin 1rem 0
    text-transform capitalize
  .routers
    position relative

// react-transition-group 路由动画  => enter/active/exit/
:global(.router-animate-fade-enter)
  opacity 0.01
  transform translate3d(0, 0, 0)

:global(.router-animate-fade-enter.router-animate-fade-enter-active) 
  opacity 1
  // transition opacity 1000ms ease-in 1000ms, transform 1000ms ease-in-out 1000ms
  transition all ease 500ms

:global(.router-animate-fade-exit)
  opacity 0
  display none
  transform translate3d(0, 0, 0)

:global(.router-animate-fade-exit.router-animate-fade-exit-active) 
  opacity 0

// 每个页面通用的页面级 loading，页面加载数据的时候可以使用这个 class
:global(.page-loading)
  text-align center
  padding-top 5rem
