.view.login
    position absolute
    width 100%
    height 100%
    .container
      $color = #96ffb1
      position absolute
      width 100%
      height 100%
      background radial-gradient(ellipse at center, $color 0%, darken($color, 50%) 100%)
      overflow hidden
    .login-conteainer
      background #f3f4f5
      box-shadow 0px 2px 8px #666
      border-radius 4px
      padding 1rem 2rem
      opacity .8
      position relative
      z-index 1
      width 30rem
      top 30%
      left 50%
      transform translateX(-50%)
      .center
        text-align center
      .logo
        background url('//static.tasaid.com/images/said-logo-img.95cb695a.png') no-repeat
        height 8rem
        width 6rem
        margin 0 auto