.song-components
  $cardWidth = 10rem
  position relative
  .card-box
    position relative
    width 100%
    display flex
    flex-wrap wrap
    .song-grid
      margin .5rem
    .upload-grid
      width $cardWidth * 2 + 1
      height $cardWidth + 1
      :global(.ant-upload)
        width 100%
        height 100%
      .icon-upload
        font-size 30px
.form-image-box
  border 1px dashed #d9d9d9
  border-radius 4px
  cursor pointer
  background #fafafa
  height 14rem
  width 14rem
  padding .5rem
  position relative
  &.error
    border-color #f5222d!important
    .icon-large
      color #f5222d!important
  .icon-large
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    min-width 8rem
    &::before
      font-size 3rem
      padding-bottom .5rem
  &:hover
    border-color #1890ff
  .form-image
    width 100%
    height 100%
    background center center no-repeat #f4f4f4
    background-size cover
    border-radius 2px
.form-song-content
  text-align right
  button:last-child
    margin-left 1rem
.remote-fail-modal
  ul
    padding-left 1.2rem
